<!DOCTYPE html>
<html>
<head>
  <title>Recently Viewed Products</title>
  <style>
    .product-card {
      display: inline-block;
      margin: 10px;
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
      width: 200px;
    }
    .product-card img {
      max-width: 100%;
      height: 150px;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <h1>Recently Viewed Products</h1>
  <% if (recentViews.length === 0) { %>
    <p>No recently viewed products.</p>
  <% } else { %>
    <% recentViews.forEach(view => { %>
      <div class="product-card">
        <a href="/products/<%= view.Product.id %>">
          <img src="<%= view.Product.image_url %>" alt="<%= view.Product.name %>">
          <h3><%= view.Product.name %></h3>
        </a>
        <p>Viewed on: <%= view.viewed_at.toLocaleString() %></p>
      </div>
    <% }); %>
  <% } %>
</body>
</html>
